<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-7" style="margin-top:180px">
            <div class="card">
                <div class="card-body">
                    <p class="text-uppercase text-sm">Informação do Utilizador</p>
                    <div class="row">
                        <form> 
                            @* adicionar a rota para edit/utilizador *@
                       
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Nome</label>
                                <input class="form-control" type="text" value="(rota do nome)">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Apelido</label>
                                <input class="form-control" type="text" value="(rota do apelido)">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Endereço Email</label>
                                <input class="form-control" type="email" value="(rota do endereco de email)">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="example-text-input" class="form-control-label">Telemóvel</label>
                                <input class="form-control" type="text" value="(rota do telemovel)">
                            </div>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary" style="">
                                Atualizar perfil
                            </button>

                            <script>
                                    $(function () {
                                        var btn = $(".btn");

                                        btn.on("click", function () {

                                            $(this).addClass('btn-progress');
                                            setTimeout(function () {
                                                btn.addClass('btn-fill')
                                            }, 500);

                                            setTimeout(function () {
                                                btn.removeClass('btn-fill')
                                            }, 4100);

                                            setTimeout(function () {
                                                btn.addClass('btn-complete')
                                            }, 4100);

                                        });
                                    })
                            </script>

                        </div>
                        </form>
                    </div>
                    
                </div>
